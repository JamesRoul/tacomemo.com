{
    "version": 2,
    "builds": [
      {
        "src": "client/package.json",
        "use": "@vercel/static-build",
        "config": { "distDir": "client/build" }
      },
      {
        "src": "server/server.js",
        "use": "@vercel/node",
        "config": { "includeFiles": ["server/**"] }
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "/server/server.js"
      }
    ]
  }